<div class="container">
  <%# <h1>DashBoard</h1> %>
  <h2 class="hello">Hello <%= @user.name %>!</h2>
  <%= image_tag "manwdog", class: "profilepic" %>
  <div class="usercard">
  </div>

  <div class="container dogs">
    <h4>Doggos:</h4>
    <% @user_dogs.each do |dog| %>
      <%= render "parks/dog", dog: dog %>
    <% end %>
  </div>

<%= link_to 'Add a dog', new_dog_path %>

  <div class="container friends">
    <h4>Your friends:</h4>
    <div class="friends-grid">
      <% @user_friendships.each do |friendship| %>
        <%= render "friend", friendship: friendship %>
      <% end %>
    </div>
  </div>
</div>
